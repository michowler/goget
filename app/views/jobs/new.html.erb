<h1> New Job Form</h1>

<%= form_with model: @job, class: "nifty_form" do |f| %>
      <div class="form-group">
        <%= f.label :pickup_address, "Pickup Address:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
        	<%= f.text_field :pickup_address, class: "form-control" %>          
        </div>
      </div>
      <div class="form-group">
        <%= f.label :dropoff_address, "Dropoff Address:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :dropoff_address, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :pickup_lat, "Pickup Latitude:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.number_field :lname, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :pickup_long, "Pickup Longitude:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.number_field :lname, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :dropoff_lat, "Dropoff Latitude:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.number_field :lname, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :dropoff_long, "Dropoff Longitude:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.number_field :comments, class: "form-control" %>
        </div>
      </div>
    
      <%= f.submit "Submit", class: "btn btn-default btn-primary" %>  
 <% end %>
